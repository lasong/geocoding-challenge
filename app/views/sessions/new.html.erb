<div class="min-h-screen flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      Login
    </h2>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_with(url: login_path, method: :post, local: true) do |form| %>
        <% if flash[:alert] %>
          <div class="bg-red-50 p-4 rounded-md mb-6">
            <div class="text-sm text-red-700">
              <%= flash[:alert] %>
            </div>
          </div>
        <% end %>

        <div class="space-y-6">
          <%= render partial: 'shared/input_field', locals: { form: form, field_name: :email, field_type: 'email' } %>
          <%= render partial: 'shared/input_field', locals: { form: form, field_name: :password, field_type: 'password' } %>

          <div>
            <%= form.submit "Login", class: button_classes %>
          </div>
        </div>
      <% end %>

      <div class="mt-6">
        <div class="text-sm text-center">
          <p class="text-gray-600">
            Don't have an account?
            <%= link_to "Register", register_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
