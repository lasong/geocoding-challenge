<div class="min-h-screen flex flex-col justify-center">
  <h2 class="my-5 text-center text-3xl font-extrabold text-gray-900">
    Register
  </h2>

  <div class="bg-white py-8 px-4 shadow rounded-lg px-10">
    <%= form_with(url: users_path, method: :post, local: true) do |form| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 p-4 rounded-md mb-6" id="error_explanation">
          <h2 class="text-sm font-medium text-red-800"><%= pluralize(@user.errors.count, "error") %> prohibited this registration:</h2>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <div class="space-y-6">
        <%= render partial: 'shared/input_field', locals: { form: form, field_name: :email, field_type: 'email' } %>
        <%= render partial: 'shared/input_field', locals: { form: form, field_name: :password, field_type: 'password' } %>
        <%= render partial: 'shared/input_field', locals: { form: form, field_name: :street, field_type: 'text' } %>
        <%= render partial: 'shared/input_field', locals: { form: form, field_name: :city, field_type: 'text' } %>
        <%= render partial: 'shared/input_field', locals: { form: form, field_name: :zip, field_type: 'text' } %>

        <div>
          <%= form.submit "Register", class: button_classes %>
        </div>
      </div>
    <% end %>

    <div class="mt-6">
      <div class="text-sm text-center">
        <p class="text-gray-600">
          Already have an account?
          <%= link_to "Login", login_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
        </p>
      </div>
    </div>
  </div>
</div>
